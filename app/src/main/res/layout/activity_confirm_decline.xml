<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmDeclineActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_toolbar_translucent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarTop"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="2dp"
                    app:layout_scrollFlags="scroll|enterAlways">

                        <ImageView
                            android:id="@+id/backArrowDecline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="?actionBarItemBackground"
                            android:src="@drawable/ic_back" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/main_logo_icon" />

                </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <!--TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Please specify the reason :"
            android:padding="8dp"/-->

        <EditText
            android:id="@+id/declineText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:hint="Kindly specify the reason ..."
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/submitDecline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shape_checkin"
            android:text="Submit"
            android:textColor="@color/white" />



</LinearLayout>